{% extends 'base.html.twig' %}

{% block body %}
<h2>Vous êtes sur le document : {{ documents.titre }}</h2> <!-- Affiche le nom du document -->
<p>Le document a été créé le {{ documents.date_doc|date('d/m/Y') }}</p>
<p>Le chemin du document : {{ documents.link }}</p>

<h2>Communes liées</h2>
<ul>
    {% for commune in asr %}
    <li>{{ commune.nom }}</li>
    {% endfor %}
</ul>
<a href="controleur.php?page=documents&action=update&id={{ documents.idt_doc }}">Modifier</a>
<a href="controleur.php?page=documents&action=delete&id={{ documents.idt_doc }}">Supprimer</a>
{% endblock %}