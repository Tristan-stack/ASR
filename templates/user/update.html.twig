{% extends 'base.html.twig' %}

{% block body %}
<h1>Mise à jour de l'utilisateur</h1>

<form method="POST" action="controleur.php?page=user&action=update&id={{ user.id }}">
    <label for="username">Nom d'utilisateur:</label>
    <input type="text" id="username" name="username" value="{{ user.username }}" required>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="{{ user.email }}" required>

    <label for="role_id">Rôle:</label>
    <select name="role_id">
        <option selected disabled>Choisissez le rôle</option>
        {% for role in roles %}
            <option value="{{ role.id }}" {% if role.id == user.role_id %}selected{% endif %}>{{ role.role }}</option>
        {% endfor %}
    </select>

    <input type="submit" value="Mettre à jour">
</form>
{% endblock %}